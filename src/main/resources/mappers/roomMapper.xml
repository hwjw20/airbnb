<?xml version="1.0" encoding="UTF-8"?>
 <!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jiwon.airbnb.room.dao.RoomDAO">
	<select id="selectRoomList" resultType="com.jiwon.airbnb.room.model.Room">
		SELECT
			`id`
			, `userId` 
		    , `type`
		    , `privacy`
		    , `address`
		    , `headcount` 
		    , `bed`
		    , `bedroom`
		    , `bathroom`
		    , `selfCheckin`
		    , `charge`
		    , `countReservation`
		    , `roomName`
		    , `roomDescription`
		    , `createdAt`
		    , `updatedAt`
		FROM
			`room`
		ORDER BY
			`countReservation` DESC
	</select>
	
	<select id="selectRoomListByType" parameterType="int" resultType="com.jiwon.airbnb.room.model.Room">
		SELECT
			`id`
			, `userId` 
		    , `type`
		    , `privacy`
		    , `address`
		    , `headcount` 
		    , `bed`
		    , `bedroom`
		    , `bathroom`
		    , `selfCheckin`
		    , `charge`
		    , `countReservation`
		    , `roomName`
		    , `roomDescription`
		    , `createdAt`
		    , `updatedAt`
		FROM
			`room`
		WHERE
			`type` = #{type}
		ORDER BY
			`countReservation` DESC
	</select>
	
	<select id="selectRoom" parameterType="int" resultType="com.jiwon.airbnb.room.model.Room">
		SELECT
			`id`
			, `userId` 
		    , `type`
		    , `privacy`
		    , `address`
		    , `lat`
		    , `lng`
		    , `headcount` 
		    , `bed`
		    , `bedroom`
		    , `bathroom`
		    , `selfCheckin`
		    , `charge`
		    , `countReservation`
		    , `roomName`
		    , `roomDescription`
		    , `createdAt`
		    , `updatedAt`
		FROM
			`room`
		WHERE
			`id` = #{roomId}
	</select>
	
	<select id="selectCountRoomByUserId" parameterType="int" resultType="int">
		SELECT
			count(1)
		FROM
			`room`
		WHERE
			`userId` = #{userId}
	</select>
	
	<select id="selectRoomIdByUserId" parameterType="int" resultType="int">
		SELECT
			`userId`
		FROM
			`room`
		WHERE
			`userId` = #{userId}
	</select>
	
	<select id="selectCountRoomByLatLng" parameterType="map" resultType="int">
		SELECT
			count(1)
		FROM
			`room`
		WHERE
			`lat` = #{lat} 
			AND `lng` = #{lng}
	</select>
	<insert id="insertRoom" parameterType="map">
		INSERT INTO
			`room`
		(
			`userId`
			, `type`
			, `privacy`
			, `address`
			, `lat`
			, `lng`
			, `headcount`
			, `bed`
			, `bedroom`
			, `bathroom`
			, `selfCheckin`
			, `charge`
			, `roomName`
			, `roomDescription`
			, `countReservation`
			, `createdAt`
			, `updatedAt`
		)
		VALUE
		(
			#{userId}
			, #{type}
			, #{privacy}
			, #{address}
			, #{lat}
			, #{lng}
			, #{headcount}
			, #{bed}
			, #{bedroom}
			, #{bathroom}
			, #{selfCheckin}
			, #{charge}
			, #{roomName}
			, #{roomDesc}
			, 0
			, now()
			, now()
		)
		
	</insert>
</mapper>